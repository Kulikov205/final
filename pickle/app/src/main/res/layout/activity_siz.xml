<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".siz"
    android:background="#F1F1EF">

    <TextView
    android:id="@+id/textView12"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="СИЗ"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="На производстве компакт-дисков (CD) диски изготавливаются на специальных станках. При работе на этих станках существует опасность возникновения следующих вредных и опасных производственных факторов: повышенная температура на поверхности станка; повышенный уровень шума; повышенный уровень вибрации; повышенный уровень пыли; возможность порезов и других травматических повреждений при обращении с оборудованием. Для работы на станках, производящих компакт-диски, необходимо пройти медицинский осмотр, получить инструктаж по охране труда и обучение безопасным методам выполнения работ, а также пройти проверку знаний требований охраны труда. Работник должен соблюдать производственную и технологическую дисциплину, регулярно поддерживать порядок на рабочем месте, а также соблюдать требования пожарной и электробезопасности. В случае нарушения требований охраны труда, работник может быть привлечен к ответственности в соответствии с законодательством РФ."
                android:textColor="#388E3C"/>

            <VideoView
                android:id="@+id/siz"
                android:layout_width="482dp"
                android:layout_height="500dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Инструменты"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Система 5S (5С) – метод организации рабочего места (пространства), нацеленный на создание оптимальных условий труда, поддержания порядка и чистоты."
                android:textColor="#388E3C"/>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Данная нейронка использует Excel таблицу с информацией о ключах, чтобы оповестить работника о пропаже."
                android:textColor="#388E3C"/>

            <VideoView
                android:id="@+id/videoView3"
                android:layout_width="482dp"
                android:layout_height="502dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Проверка"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotationX="-360"
                android:text="80% распознавания"
                android:textColor="#388E3C"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cложности возникли со съёмкой видео и roboflow"
                android:textColor="#388E3C"/>

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cложности с выводом информации из Excel таблицы заключались в: неправильном подключение к таблице, неточное нахождение контура инструмента и его номера"
                android:textColor="#388E3C" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>